
module tb_2ff_sync;
reg clk;
reg rst;
reg [2:0] async;
wire [2:0] sync;

The_2ff_synchronizer dut(clk,rst,async,sync);

initial 
begin
{clk,async} = 0;
end

always #5 clk = ~clk;

initial
begin
rst = 1'b1;
#10;

rst = 1'b0;
async = 3'b001;
#40;

async =3'b010;
#40;

async = 3'b100;
#40;

#3000 $finish;
end
endmodule
